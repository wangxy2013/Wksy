<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dm_5"
    >


    <LinearLayout
        android:id="@+id/ll_product"
        android:layout_marginRight="@dimen/dm_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号：SPOOOOOOOO1"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>

            <ImageView
                android:layout_marginRight="@dimen/dm_10"
                android:textColor="@color/blackA"
                android:src="@drawable/ic_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_ql_itm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号：SPOOOOOOOO1"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>


        <TextView
            android:id="@+id/tv_prd_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_3"
            android:text="产品名称：电池组"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_90"
            android:layout_marginTop="@dimen/dm_3"
            android:text="产品名称：电池组"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>

        <TextView
            android:id="@+id/tv_product_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_3"
            android:text="产品数量：15"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_out"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dm_5"
            android:background="@color/blueB"
            android:text="出库"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>
